@model ManagementBook.Models.Book
@{
    ViewData["Title"] = "Xóa sách";
}

<h1>@ViewData["Title"]</h1>

<h3>Bạn có chắc chắn muốn xóa sách này?</h3>
<div class="card">
    <div class="card-header">
        <h4>@Model.Title</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Tác giả</dt>
            <dd class="col-sm-9">@Model.Author.Name</dd>

            <dt class="col-sm-3">Thể loại</dt>
            <dd class="col-sm-9">@Model.Category.Name</dd>

            <dt class="col-sm-3">Giá</dt>
            <dd class="col-sm-9">@Model.Price</dd>

            <dt class="col-sm-3">Tồn kho</dt>
            <dd class="col-sm-9">@Model.StockQuantity</dd>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="Delete" asp-controller="Books" method="post">
            <input type="hidden" asp-for="BookId" />
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger">Xóa</button>
            <a asp-action="Index" asp-controller="Dashboard" class="btn btn-secondary">Hủy</a>
        </form>
    </div>
</div>